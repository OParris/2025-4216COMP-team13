import pandas as pd
omport numpy as np
import seaborn as sns
import matplotlib.pyplot as plt

np.random.seed(42)
num_students=100
data = {
        'Particpation_score': np.random.uniform(0,100,num_students),
        ' Assighments_avg': np.rancom.uniform(50,100, num_students) = np.random.normal(0,5, num_studentys),
         'Departments':np.random.choice(['CS', 'Enginering',',Business','Math',Biology'], size=num_students)
}
df= pd.DataFrame(data)

sns.implot(
data=df,
x='Participation_Score',
